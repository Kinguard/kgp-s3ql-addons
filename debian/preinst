#!/bin/sh
# preinst script for kgp-s3ql-addons
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

diversion_added_version=1.0

case "$1" in
    install)

        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/backends/__init__.py
        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/common.py
        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/adm.py
        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/database.py
        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/fsck.py
        dpkg-divert --package kgp-s3ql-addons --add --rename /usr/lib/s3ql/s3ql/mkfs.py
	
    ;;
    upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
