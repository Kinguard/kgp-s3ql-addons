#!/bin/sh
# postinst script for kgp-s3ql-addons 
#
# see: dh_installdeb(1)

set -e

pkgname=kgp-s3ql-addons
basesource="/etc/kinguard/divert/$pkgname/"
divsuffix="-kgp-dist"

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#
# Divert file, originally by azatoth in bubba-backend package
#
# Usage:
#
# divert package orig_file orig_file_diverted new_source_file service
#
# Where
#	orig_file 		- Which file should be diverted
#	source_file		- Which file should be used as replacement
#                                 path is suffixed with basesource
#	service			- service to restart after diversion or "false"
#
# Sideeffects, if function divert_cb_"service" function exists it will be called
# instead of service restart being performed
#
divert() {
	package=$pkgname;
	file=$1;
	diverted="${file}${divsuffix}"
	source_file="${basesource}$2";
	service=$3;
	if [ x$(dpkg-divert --truename $file) = x$file ]; then # we are not diverted at all
		dpkg-divert --add --package $package --rename --divert $diverted $file;
		if [ ! -e $file ]; then
			if [ "false" != "$source_file" ]; then
				ln -sf $source_file $file;
			fi
			if $(command -v "divert_cb_$service" >/dev/null); then 
				divert_cb_$service "$@";
			elif [ "$service" != "false" ]; then
				systemctl --quiet try-restart $service || true;
			fi
		fi
	fi

}


case "$1" in
	configure)
		divert /usr/lib/s3ql/s3ql/backends/__init__.py	backends/__init__.py false
		divert /usr/lib/s3ql/s3ql/backends/s3op.py 	backends/s3op.py false
		divert /usr/lib/s3ql/s3ql/common.py		common.py false
		divert /usr/lib/s3ql/s3ql/database.py		database.py false
		divert /usr/lib/s3ql/s3ql/fsck.py		fsck.py false
		divert /usr/lib/s3ql/s3ql/mkfs.py		mkfs.py false
		divert /usr/lib/s3ql/s3ql/adm.py		adm.py false
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
